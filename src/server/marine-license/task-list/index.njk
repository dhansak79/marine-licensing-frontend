{% extends 'layouts/page.njk' %}
{% from "govuk/components/task-list/macro.njk" import govukTaskList %}
{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% if projectName %}
        <span class="govuk-caption-l">{{projectName}}</span>
      {% endif %}
        <h1 class="govuk-heading-l">Marine licence start page</h1>
      <p class="govuk-body">When you provide your information you'll need to complete all sections before you can send your application.</p>
      <p class="govuk-body">Your progress will be saved as you go if you need to come back later.</p>
      {{ govukTaskList({
          idPrefix: "task-list",
          items: taskList
        }) }}
    </div>
  </div>
{% endblock %}
